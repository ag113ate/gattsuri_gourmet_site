$show_review_vote = $('#show_review_vote_<%= "#{@input_review.store_id}_#{@input_review.vote_id}" %>');
$show_review_vote.remove();

$('#review_count_disp').text("<%= @input_review_count %> 件");

$('#notice_msg').text("投稿口コミを1件、削除しました");

$store = $('#store_area_<%= @input_review.store_id %>');
if ($store.length){
  var $img_list = $store.find('.store-review-area img');
  var $score_disp = $store.find('.store-review-area .review-point-area');
  
  <% score = @input_review.store.score %>
  if (<%= score %> != -1){
    /* ========================================== */
    /* 評価が選択された場合は、対応する画像を表示 */
    /* ========================================== */
    for (var loop1 = 1; loop1 <= $img_list.length; loop1++){
      var $img = $img_list.eq(loop1 - 1);
      
      if (loop1 <= <%= score %>){
        $img.attr('src', '/assets/meat_color_all.png');
      }
      else if((loop1 - 0.5) <= <%= score %>){
        $img.attr('src', '/assets/meat_color_half.png');
      }
      else{
        $img.attr('src', '/assets/meat_color_none.png');
      }
    }
     /* 評価値を更新 */
    $score_disp.text('<%= "#{score.round(1)}" %>');
    /* ========================================== */
  }else{
    /* 未選択となった場合は、画像を非表示 */
    for (var loop1 = 0; loop1 < $img_list.length; loop1++){
      $img_list.eq(loop1).attr('src', '/assets/meat_color_none.png');
    }
    
    /* 評価値を更新 */
    $score_disp.text("末評価");
    
    /* 「口コミを見る」ボタンを消去 */
    $show_review_btn = $store.find('.show-review-btn');
    $show_review_btn.remove();
  }
}